<section class="w-screen h-screen flex justify-center p-5 items-center bg-gray-100">
  <form
    method="POST"
    action="/auth/register"
    class="p-5 max-w-full w-80 bg-white rounded flex justify-center items-center flex-col shadow-md"
    autocomplete="off"
  >
    <h1 class="mb-5 text-3xl uppercase text-gray-600">Register</h1>
    <input
      type="username"
      name="username"
      class="mb-5 p-3 focus:border-green-400 rounded border-2 outline-none w-full"
      placeholder="Username"
      required
    />
    <input
      type="password"
      name="password"
      class="mb-5 p-3 focus:border-green-400 rounded border-2 outline-none w-full"
      placeholder="Password"
      required
    />

    <label class="inline-flex items-center mb-5 w-full">
      <input type="checkbox" class="h-5 w-5 text-orange-600 bg-green-400" name="superadmin" /><span class="ml-2 text-gray-400">Superadmin</span>
    </label>

    <button class="bg-green-400 hover:bg-green-600 text-white font-bold p-2 rounded uppercase w-full" type="submit">Register</button>
  </form>
</section>
