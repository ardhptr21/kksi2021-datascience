<section class="flex justify-center mt-32 flex-col px-10 pb-10 items-center">
  <h1 class="title-font mb-10 text-4xl font-extrabold leading-10 tracking-tight sm:text-5xl sm:leading-none md:text-6xl text-center">
    CREATE VIDEO URL
  </h1>
  <form class="w-full max-w-lg border p-5" action="<%= locals.data ? "/video/update?_method=PUT" : "/video/store" %> autocomplete="off">
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"> Url </label>
        <input
          class="
            appearance-none
            block
            w-full
            bg-gray-200
            text-gray-700
            border border-gray-200
            rounded
            py-3
            px-4
            mb-3
            leading-tight
            focus:outline-none focus:bg-white focus:border-gray-500
          "
          type="url"
          value="<%= locals.data ? data.url : "" %>"
        />
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"> Title </label>
        <input
          class="
            appearance-none
            block
            w-full
            bg-gray-200
            text-gray-700
            border border-gray-200
            rounded
            py-3
            px-4
            mb-3
            leading-tight
            focus:outline-none focus:bg-white focus:border-gray-500
          "
          type="text"
          value="<%= locals.data ? data.title : "" %>"
        />
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"> Description </label>
        <textarea
          class="
            no-resize
            appearance-none
            block
            w-full
            bg-gray-200
            text-gray-700
            border border-gray-200
            rounded
            py-3
            px-4
            mb-3
            leading-tight
            focus:outline-none focus:bg-white focus:border-gray-500
            h-48
            resize-none
          "
        ><%= locals.data ? data.description : "" %></textarea>
      </div>
    </div>
    <div class="md:flex md:items-center">
      <a
        href="/admin/video"
        class="shadow mr-3 border-2 border-green-400 focus:shadow-outline focus:outline-none text-green-400 font-bold py-2 px-4 rounded"
        type="button"
      >
        BACK
      </a>
      <button class="shadow bg-green-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="button">CREATE</button>
    </div>
  </form>
</section>
